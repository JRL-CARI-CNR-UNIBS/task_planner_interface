<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Condition ID="TriggerNewPiece" piece_output="{pezzo}"/>
            <Action ID="SingleTaskDispatcher" agent_name="robot" piece_input="{pezzo}" piece_output="{pezzo}" task_name="unmount"/>
            <Action ID="SingleTaskDispatcher" agent_name="human" piece_input="{pezzo}" piece_output="{pezzo}" task_name="mount"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="SingleTaskDispatcher">
            <input_port name="agent_name"/>
            <input_port name="piece_input"/>
            <output_port name="piece_output"/>
            <input_port name="task_name"/>
        </Action>
        <Condition ID="TriggerNewPiece">
            <output_port name="piece_output"/>
        </Condition>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
